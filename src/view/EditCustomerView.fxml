<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.EditCustomerController" hgap="10" vgap="10">
    <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Supplements:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <VBox fx:id="supplementBox" spacing="5" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <HBox spacing="10" GridPane.rowIndex="3" GridPane.columnIndex="1">
        <Button fx:id="saveButton" text="Save" onAction="#handleSave" disable="true"/>
        <Button text="Cancel" onAction="#handleCancel"/>
    </HBox>
</GridPane>

