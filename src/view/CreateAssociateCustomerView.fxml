<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane fx:controller="controller.CreateAssociateCustomerController" xmlns:fx="http://javafx.com/fxml" hgap="10" vgap="10">
    
    <Label text="Create Asscociate Customer" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    
    <Label text="Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Payer:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <ComboBox fx:id="payerComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Supplements:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <VBox fx:id="supplementsBox" spacing="5" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Button text="Create" onAction="#handleCreate" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
</GridPane>
