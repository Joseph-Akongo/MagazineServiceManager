<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane fx:controller="controller.CreateEnterpriseCustomerController" xmlns:fx="http://javafx.com/fxml" hgap="10" vgap="10">

    <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="emailField" promptText="example@email.com" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Payment Method:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <ComboBox fx:id="paymentMethodBox" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <VBox fx:id="creditCardFields" visible="false" managed="false" GridPane.rowIndex="3" GridPane.columnIndex="1">
        <TextField fx:id="cardNumberField" promptText="Card Number"/>
        <TextField fx:id="expiryField" promptText="Expiry MM/YY"/>
        <TextField fx:id="holderNameField" promptText="Card Holder Name"/>
    </VBox>

    <VBox fx:id="debitFields" visible="false" managed="false" GridPane.rowIndex="4" GridPane.columnIndex="1">
        <TextField fx:id="bsbField" promptText="BSB"/>
        <TextField fx:id="accountNumberField" promptText="Account Number"/>
    </VBox>

    <Label text="Contact Person Name:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <TextField fx:id="contactNameField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <Label text="Contact Email:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <TextField fx:id="contactEmailField" promptText="contact@email.com"  GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    <Label text="Number of Copies:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
    <Spinner fx:id="copiesSpinner" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

    <Label text="Supplements:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
    <VBox fx:id="supplementsBox" spacing="5" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

    <Button text="Create" onAction="#handleCreate" GridPane.rowIndex="9" GridPane.columnIndex="1"/>
</GridPane>
