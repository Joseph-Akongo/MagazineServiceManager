<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:controller="controller.CreatePayingCustomerController" xmlns:fx="http://javafx.com/fxml" hgap="10" vgap="10">
    <padding>
        
    </padding>

    <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="emailField" promptText="example@email.com" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Payment Method:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <ComboBox fx:id="paymentMethodBox" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <!-- Credit Card Fields -->
    <VBox fx:id="creditCardFields" visible="false" managed="false" GridPane.rowIndex="3" GridPane.columnIndex="1">
        <TextField fx:id="cardNumberField" promptText="Card Number"/>
        <TextField fx:id="expiryField" promptText="Expiry MM/YY"/>
        <TextField fx:id="holderNameField" promptText="Card Holder Name"/>
    </VBox>

    <!-- Direct Debit Fields -->
    <VBox fx:id="debitFields" visible="false" managed="false" GridPane.rowIndex="3" GridPane.columnIndex="1">
        <TextField fx:id="bsbField" promptText="BSB"/>
        <TextField fx:id="accountNumberField" promptText="Account Number"/>
    </VBox>

    <Label text="Select Supplements:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <VBox fx:id="supplementsBox" GridPane.rowIndex="4" GridPane.columnIndex="1" spacing="5"/>

    <Button text="Create" onAction="#handleCreate" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
</GridPane>


