<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controller.CreateSupplementController" spacing="10" alignment="TOP_LEFT" style="-fx-padding: 15;">

    <Label text="Create Supplement" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <HBox spacing="10">
        <Label text="Name:"/>
        <TextField fx:id="nameField"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Weekly Cost:"/>
        <TextField fx:id="costField"/>
    </HBox>

    <Button text="Create" onAction="#handleSave"/>
</VBox>
