<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="billingRoot" xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.BillingController"
      alignment="TOP_LEFT" spacing="10"
      visible="false" managed="false"
      style="-fx-padding: 20;">

    <Label text="Billing Information" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <Label fx:id="customerNameLabel" />
    <Label fx:id="weeklyChargeLabel" />
    <Label fx:id="monthlyChargeLabel" />

    <Button text="Back to Details" onAction="#handleBack" />
</VBox>
